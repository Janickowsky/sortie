{% extends "base.html.twig" %}

{% block title %}Détails d'un profil{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="d-flex alert alert-primary justify-content-center">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('errors') %}
        <div class="d-flex alert alert-danger justify-content-center">
            {{ message }}
        </div>
    {% endfor %}

    <div class="d-flex justify-content-center">
        <h1>{{ user.pseudo }}</h1>
    </div>
    <div class="d-flex flex-column justify-content-center">
        <div class="form-group col-6">
            <label for="fld-name">Nom :</label>
            <p class="form-control" id="nom">{{ user.nom }}</p>
        </div>

        <div class="form-group col-6">
            <label for="fld-name">Prénom :</label>
            <p class="form-control" id="prenom">{{ user.prenom }}</p>
        </div>

        <div class="form-group col-6">
            <label for="fld-tel">Téléphone :</label>
            <p class="form-control" id="telephone">{{ user.telephone }}</p>
        </div>

        <div class="form-group col-6">
            <label for="exampleInputEmail1">Email :</label>
            <p class="form-control" id="email">{{ user.email }}</p>
        </div>

        <div class="form-group col-6">
            <label for="fld-name">Site de rattachement :</label>
            <p class="form-control" id="campus">{{ user.campus.nom }}</p>
        </div>
    </div>

    <button class="btn btn-primary" >
        <a href="{{ path('home_home') }}" style="color: white">Retour</a>
    </button>

{% endblock %}
