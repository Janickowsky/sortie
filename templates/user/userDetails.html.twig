{% extends "base.html.twig" %}

{% block title %}Détails d'un profil{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="d-flex alert alert-primary justify-content-center">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('errors') %}
        <div class="d-flex alert alert-danger justify-content-center">
            {{ message }}
        </div>
    {% endfor %}

    <div class="container">
        <div class="d-flex justify-content-center mb-1 mt-2">
            {% if user.image %}
            <img src="{{ asset('build/images/' ~ user.image) }}" class="img-fluid" alt="Responsive image" style="width: 170px">
            {% endif %}
        </div>
        <div class="d-flex justify-content-center mt-2 mb-4">
            <h1>{{ user.pseudo }}</h1>
        </div>

        <div class="d-flex justify-content-center form-group align-items-center row">
            <label class="col-sm-1 form-check-label" for="fld-name">Nom </label>
            <div class="col-sm-5">
                <input type="text" readonly class="text-center form-control"  value="{{user.nom}}">
            </div>
        </div>

        <div class="d-flex justify-content-center form-group align-items-center row">
            <label class="col-sm-1 form-check-label" for="fld-name">Prénom </label>
            <div class="col-sm-5">
                <input type="text" readonly class="text-center form-control"  value="{{user.prenom }}">
            </div>
        </div>

        <div class="d-flex justify-content-center form-group align-items-center row">
            <label class="col-sm-1 form-check-label" for="fld-name">Telephone </label>
            <div class="col-sm-5">
                <input type="text" readonly class="text-center form-control"  value="{{user.telephone }}">
            </div>
        </div>

        <div class="d-flex justify-content-center form-group align-items-center row">
            <label class="col-sm-1 form-check-label" for="fld-name">Email </label>
            <div class="col-sm-5">
                <input type="text" readonly class="text-center form-control"  value="{{user.email }}">
            </div>
        </div>

        <div class="d-flex justify-content-center form-group align-items-center row">
            <label class="col-sm-1 form-check-label" for="fld-name">Site de rattachement </label>
            <div class="col-sm-5 ml-2">
                <input type="text" readonly class="text-center form-control"  value="{{user.campus.nom }}">
            </div>
        </div>

        <div  class="d-flex justify-content-center">
            <a type="button" class="btn btn-primary" href="{{ path('home_home') }}>Retour</a>
        </div>

    </div>


{% endblock %}
