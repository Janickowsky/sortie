{% extends 'base.html.twig' %}

{% block body %}

    {% form_theme formSite 'bootstrap_4_layout.html.twig' %}

    <div class="container mt-2">
        {{ form_start(formSite) }}
        <div class="d-flex justify-content-center mt-4 mb-2">
            <h1>Modifier un site</h1>
        </div>

        <div class="d-flex justify-content-center form-group align-items-center row">
            {{ form_label(formSite.nom, null,{'label_attr': {'class': 'col-sm-2 form-check-label'}}) }}
            <div class="col-sm-5">
                {{ form_widget(formSite.nom, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div>
            <div class="d-flex form-group justify-content-center">
                {{ form_widget(formSite.submit, {'attr': {'class': 'btn btn-primary'}}) }}
            </div>
        </div>
        {{ form_end(formSite) }}
    </div>
{% endblock %}

