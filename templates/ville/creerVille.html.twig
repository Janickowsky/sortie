{% extends 'base.html.twig' %}

{% block body %}

    {% form_theme formCreateVille 'bootstrap_4_layout.html.twig' %}

    <div class="container mt-2">
        {{ form_start(formCreateVille) }}
        <div class="d-flex justify-content-center mt-4 mb-2">
            <h1>Ajouter une ville</h1>
        </div>

        <div class="d-flex justify-content-center form-group align-items-center row">
            {{ form_label(formCreateVille.nom, null,{'label_attr': {'class': 'col-sm-2 form-check-label'}}) }}
            <div class="col-sm-5">
                {{ form_widget(formCreateVille.nom, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="d-flex justify-content-center form-group align-items-center row">
            {{ form_label(formCreateVille.codePostal, null,{'label_attr': {'class': 'col-sm-2 form-check-label'}}) }}
            <div class="col-sm-5">
                {{ form_widget(formCreateVille.codePostal, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div>
            <div class="d-flex form-group justify-content-center">
                {{ form_widget(formCreateVille.submit, {'attr': {'class': 'btn btn-primary'}}) }}
            </div>
        </div>

        {{ form_end(formCreateVille) }}
    </div>


{% endblock %}

