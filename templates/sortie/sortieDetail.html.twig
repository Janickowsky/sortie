{% extends "base.html.twig" %}

{% block body %}
    <div>
        <h1>Afficher une sortie</h1>
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1">Nom de la sortie</label>
        <p class="form-control" id="nom">{{ sortie.nom}}</p>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Lieu</label>
        <p class="form-control" id="lieu">{{ sortie.lieu.nom}}</p>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Rue</label>
        <p class="form-control" id="rue">{{ sortie.lieu.nom}}</p>
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1">Ville</label>
        <p class="form-control" id="ville">{{ sortie.lieu.ville.nom}}</p>
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1">Date et heure de la sortie</label>
        <p class="form-control" id="date_sortie">{{ sortie.dateHeureDebut|format_datetime('short', 'short', locale='fr')}}</p>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Date limite d'inscription</label>
        <p class="form-control" id="date_limite">{{ sortie.dateLimiteInscription|format_datetime('short', 'none', locale='fr') }}</p>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Code Postal</label>
        <p class="form-control" id="cp">{{ sortie.lieu.ville.codePostal }}</p>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Nombre de place</label>
        <p class="form-control" id="nbPlace">{{ sortie.lieu.ville.codePostal }}</p>
    </div>

{% endblock %}