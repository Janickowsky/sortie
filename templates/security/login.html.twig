{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}

<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div>
        <div>
            <h1 class="h3 mb-3 font-weight-normal d-flex justify-content-center">Se connecter</h1>
        </div>
        <div class="mb-5">
            <label for="inputEmail" class="mr-2 justify-content-center">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class=" col-6 form-control" required autofocus>
        </div>

        <div class="">
            <label for="inputPassword">Password</label>
            <input type="password" name="password" id="inputPassword" class="col-6 form-control" required>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        </div>

    </div>

    <div class="mt-3">
        <div >
            <input type="checkbox" id="remember_me" name="_remember_me" checked/>
            <label for="remember_me">Se souvenir de moi</label>
        </div>

        <div class="ml-3">
            <button class="btn btn-primary" type="submit">
                Sign in
            </button>
        </div>

    </div>

</form>
{% endblock %}
