{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}

<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="d-flex flex-column form-group row">
        <div class="col-12 d-flex justify-content-center mt-2 mb-2">
            <h1>Se connecter</h1>
        </div>
        <div class="d-flex justify-content-center mt-2 mb-2">
            <label class="col-form-label" for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="ml-4 col-4 form-control" required autofocus>
        </div>

        <div class="d-flex justify-content-center mt-2 mb-2">
            <label class="col-form-label mr-1" for="inputPassword">Password</label>
            <input type="password" name="password" id="inputPassword" class="col-4 form-control" required>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        </div>

        <div class="d-flex justify-content-center form-check form-check-inline mt-2 mb-2">
            <input class="form-check-input" type="checkbox" id="remember_me" name="_remember_me"/>
            <label class="form-check-label" for="remember_me">Se souvenir de moi</label>
        </div>

        <div class="d-flex justify-content-center mt-2 mb-2">
            <button class="btn btn-primary" type="submit">Sign in</button>
        </div>
    </div>



</form>
{% endblock %}
